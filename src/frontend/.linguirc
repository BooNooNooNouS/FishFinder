{
    "locales": [
        "en",
        "es",
        "es_MX"],
    "catalogs": [{
        "path": "src/locales/{locale}/messages",
        "include": ["src", "lib"],
        "exclude": ["**/node_modules/**", "./dist/**"]
    }],
    "format": "po",
    "orderBy": "origin",
    "sourceLocale": "en",
    "pseudoLocale": "pseudo-LOCALE",
    "fallbackLocales": {
        "default": "en",
        "pseudo-LOCALE": "en"
    }
}
